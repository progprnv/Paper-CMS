# PaperFlow CMS Environment Configuration
# Copy this file to .env and update the values for your environment

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-very-secret-key-change-this-in-production

# Database Configuration
# For development (local MySQL)
DATABASE_URL=mysql+pymysql://paperflow_user:your_password@localhost/paperflow_cms

# For production (update with your production database URL)
# DATABASE_URL=mysql+pymysql://user:password@host:port/database_name

# Email Configuration (Optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Redis Configuration (Optional - for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=app/static/uploads

# Security Configuration
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379

# Development/Production Flags
DEBUG=true
TESTING=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/paperflow.log

# Additional Security Headers
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000
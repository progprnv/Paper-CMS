# Paper-CMS Environment Configuration for Supabase & Vercel
# Copy this file to .env and update the values for your environment

# Flask Configuration
FLASK_APP=run.py
FLASK_CONFIG=development
SECRET_KEY=paper-cms-super-secret-key-2025-change-this

# Your Supabase Configuration
SUPABASE_URL=https://xssqhifnabymmsvvybgx.supabase.co
SUPABASE_ANON_KEY=your-anon-key-from-supabase-dashboard
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-from-supabase-dashboard

# Your Database Configuration
DATABASE_URL=postgresql://postgres:Admin@123#Admin@db.xssqhifnabymmsvvybgx.supabase.co:5432/postgres

# Supabase Storage
SUPABASE_STORAGE_BUCKET=papers

# Email Configuration (Optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/tmp/uploads

# Security Configuration
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Development/Production Flags
DEBUG=true
TESTING=false

# Logging Configuration
LOG_LEVEL=INFO

# For Vercel deployment, set:
# FLASK_CONFIG=vercel
# VERCEL=1